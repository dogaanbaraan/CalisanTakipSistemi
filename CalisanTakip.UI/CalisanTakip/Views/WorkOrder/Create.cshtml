@model CalisanTakip.Common.ViewModels.WorkOrderVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <br /><br />
    <form class="form-horizontal" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" asp-for="WorkOrderPoint" for="form-field-1">İş Emri Puanı</label>

            <div class="col-sm-9">
                <input type="number" min="0" max="15" asp-for="WorkOrderPoint" id="form-field-1" placeholder="İş Emri Puanı" class="col-xs-10 col-sm-5" />
                <span asp-validation-for="WorkOrderPoint"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" asp-for="WorkOrderDescription" for="form-field-1">İş Emri Açıklaması</label>

            <div class="col-sm-4">
                @*            <input type="text" asp-for="WorkOrderDescription" id="form-field-1" placeholder="İş Emri Açıklaması" class="col-xs-10 col-sm-5" />*@
                <textarea class="form-control limited" asp-for="WorkOrderDescription" maxlength="250"></textarea>
                <span asp-validation-for="WorkOrderDescription"></span>
            </div>
        </div>
        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="İş Emri Kaydet" class="btn btn-info col-xs-3" />
            </div>

        </div>
    </form>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
<script src="~/js/jquery.inputlimiter.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('textarea.limited').inputlimiter({
            remText: '%n karakter kaldı...',
            limitText: 'maksimum limit : %n.'
        });
    });
</script>
}

