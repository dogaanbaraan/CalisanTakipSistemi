@*@model IEnumerable<CalisanTakip.Common.ViewModels.WorkOrderVM>*@

@model CalisanTakip.Common.PagingListModels.PaginatedList<CalisanTakip.Common.ViewModels.WorkOrderVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content">
    <div class="page-header">
        <h2>İş Emri Listesi</h2>
    </div><!-- /.page-header -->
    <br />
    <div class="col-6 text-left text-white">
        <a class="btn btn-success" asp-controller="WorkOrder" asp-action="Create">İş Emri Ekle</a>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <table id="simple-table" class="table  table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>İş Emri Numarası</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @item.WorkOrderNumber
                                        </td>
                                        <td>@item.CreateDate.ToShortDateString()</td>
                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">
                                                <a class="btn btn-xs btn-info" asp-controller="WorkOrder" asp-route-id="@item.Id" asp-action="Edit">
                                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                </a>

                                                @*  <button class="btn btn-xs btn-danger">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                    </button>*@
                                                <a class="btn btn-xs btn-danger" onclick="removeItem(@item.Id)" data-id="@item.Id">
                                                    <i class="ace-icon fa fa-trash bigger-120"></i>
                                                </a>

                                                <button class="btn btn-xs btn-warning">
                                                    <i class="ace-icon fa fa-flag bigger-120"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>Data Bulunamadı...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.span -->
            </div><!-- /.row -->

        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.PreviousPage ? "disabled" : "";
    var nextDisabled = !Model.NextPage ? "disabled" : "";
}

<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex-1)"
class="btn btn-success @prevDisabled"> Önceki Sayfa
</a>
<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex+1)"
class="btn btn-info @nextDisabled"> Sonraki Sayfa
</a>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}