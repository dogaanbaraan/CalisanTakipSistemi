@model CalisanTakip.Common.ViewModels.EmployeeLeaveTypeVM
@{
    ViewData["Title"] = "Çalışan İzin Tipi Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- PAGE CONTENT BEGINS -->
<div>
    <br /><br />
<form class="form-horizontal"asp-action="Edit">
    @Html.HiddenFor(x=>Model.Id)
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Name" for="form-field-1">İzin Tipi</label>

        <div class="col-sm-9">
            <input type="text" asp-for="Name" id="form-field-1" placeholder="İzin Sebebi" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Name"></span>        
        </div>
    </div>
     <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="DefaultDays" for="form-field-1">İzin Süresi</label>

        <div class="col-sm-9">
            <input type="number" min="0" max="15" asp-for="DefaultDays" id="form-field-1" placeholder="Sabit Gün Sayısı" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="DefaultDays"></span>        
        </div>
    </div>
    <div class="clearfix form-actions">
                      <div class="col-md-offset-3 col-md-9">

                    <input type="submit" value="Edit" class="btn btn-info col-xs-3" />
            </div>

    </div>
</form>
</div>